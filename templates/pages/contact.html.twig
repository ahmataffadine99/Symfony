{# templates/pages/contact.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-6 text-center">Contactez-nous</h1>

        <div class="bg-white shadow-lg rounded-xl p-8 mb-8">
            <p class="text-gray-700 leading-relaxed text-center mb-6">
                Si vous avez des questions, des suggestions, ou si vous rencontrez un problème avec "Mon Collectionneur", n'hésitez pas à nous envoyer un message via le formulaire ci-dessous.
            </p>

            <h2 class="text-2xl font-semibold text-gray-700 mb-6 text-center">Envoyez-nous un message</h2>

            {# Début du formulaire Symfony #}
            {{ form_start(contactForm, {'attr': {'class': 'space-y-6'}}) }}

                {# Affichage des champs individuellement pour un contrôle plus fin du layout #}
                <div>
                    {{ form_label(contactForm.name) }}
                    {{ form_widget(contactForm.name) }}
                    {{ form_errors(contactForm.name) }} {# Affiche les erreurs de validation #}
                </div>

                <div>
                    {{ form_label(contactForm.email) }}
                    {{ form_widget(contactForm.email) }}
                    {{ form_errors(contactForm.email) }}
                </div>

                <div>
                    {{ form_label(contactForm.subject) }}
                    {{ form_widget(contactForm.subject) }}
                    {{ form_errors(contactForm.subject) }}
                </div>

                <div>
                    {{ form_label(contactForm.message) }}
                    {{ form_widget(contactForm.message) }}
                    {{ form_errors(contactForm.message) }}
                </div>

                {# Bouton de soumission du formulaire #}
                <button type="submit" class="
                    w-full sm:w-auto px-6 py-3
                    bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md
                    focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-75
                    transition duration-300 ease-in-out
                ">
                    Envoyer le message
                </button>

            {{ form_end(contactForm) }}
            {# Fin du formulaire #}

            <hr class="my-8 border-gray-200">

            <h2 class="text-2xl font-semibold text-gray-700 mb-4 text-center">Autres moyens de contact</h2>
            <p class="text-gray-700 leading-relaxed text-center">
                Vous pouvez également nous envoyer un email directement à :
                <a href="mailto:contact@moncollectionneur.com" class="text-blue-600 hover:underline font-medium">contact@moncollectionneur.com</a>
            </p>
        </div>
    </div>
{% endblock %}