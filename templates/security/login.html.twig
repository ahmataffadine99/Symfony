{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="hero-section bg-light py-5 text-center">
        <div class="container">
            <h1 class="display-4 fw-bold">Connexion</h1>
            <p class="lead">Accédez à votre univers de collections en toute sécurité.</p>
        </div>
    </div>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 bg-white shadow-sm rounded p-4">
                
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Email</label>
                        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="Entrez votre email" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Mot de passe</label>
                        <input type="password" id="password" name="_password" class="form-control" placeholder="Entrez votre mot de passe" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                </form>

                <hr class="my-4">

                <div class="text-center mb-3">
                    <p class="mb-2">Ou connectez-vous avec</p>
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-danger d-flex align-items-center justify-content-center">
                            <i class="bi bi-google me-2"></i> Google
                            {# href="{{ path('app_google_login') }}" #}
                        </a>
                        <a href="#" class="btn btn-outline-dark d-flex align-items-center justify-content-center">
                            <i class="bi bi-github me-2"></i> GitHub
                            {# href="{{ path('app_github_login') }}" #}
                        </a>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <a href="{{ path('homepage') }}" class="text-decoration-none">← Retour à l'accueil</a>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-light py-4 mt-5 text-center border-top">
        <div class="container">
            <p class="mb-0"><i class="bi bi-c-circle me-1"></i> 2025 Mon Collectionneur</p>
        </div>
    </footer>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .hero-section {
            background-image: linear-gradient(to right, #f8f9fa, #e9ecef);
        }
        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }
        .btn-outline-dark:hover {
            background-color: #212529;
            color: white;
        }
    </style>
{% endblock %}
