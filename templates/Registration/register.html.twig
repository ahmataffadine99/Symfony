{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="hero-section bg-light py-5 text-center">
        <div class="container">
            <h1 class="display-4 fw-bold">Inscription</h1>
            <p class="lead">Créez votre compte pour rejoindre notre communauté.</p>
        </div>
    </div>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 bg-white shadow-sm rounded p-4">

                {{ form_start(registrationForm) }}
                   
                    <div class="mb-3 border-top pt-3">
                        {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3 border-top pt-3">
                        {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3 border-top pt-3">
                        {{ form_label(registrationForm.plainPassword.second, 'Répéter le mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3 border-top pt-3 form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, 'Accepter les termes', {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">S'inscrire</button>
                    </div>
                {{ form_end(registrationForm) }}

                <hr class="my-4">

                <div class="text-center mb-3">
                    <p class="mb-2">Ou inscrivez-vous avec</p>
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-danger d-flex align-items-center justify-content-center">
                            <i class="bi bi-google me-2"></i> Google
                        </a>
                        <a href="#" class="btn btn-outline-dark d-flex align-items-center justify-content-center">
                            <i class="bi bi-github me-2"></i> GitHub
                        </a>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <p>Déjà un compte ? <a href="{{ path('login') }}" class="text-decoration-none">Se connecter</a></p>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-light py-4 mt-5 text-center border-top">
        <div class="container">
            <p class="mb-0"><i class="bi bi-c-circle me-1"></i> 2025 Mon Collectionneur</p>
        </div>
    </footer>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .hero-section {
            background-image: linear-gradient(to right, #f8f9fa, #e9ecef);
        }
        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }
        .btn-outline-dark:hover {
            background-color: #212529;
            color: white;
        }
        .form-control {
            background-color: #f5f5dc; /* beige */
        }
        .border-top {
            border-top: 2px solid #dee2e6 !important;
        }
    </style>
{% endblock %}
